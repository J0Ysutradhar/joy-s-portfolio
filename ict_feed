<body>
  <header>
    <h1>ðŸ“„ Facebook Feed</h1>
  </header>

  <main>
    <div class="status">Loading feed...</div>
    <div id="feed"></div>
  </main>

  <footer>
    Powered by MetaXsouL softwares
  </footer>

  <script>
    // âš  This will expose your token in the page source!
    const url = "https://graph.facebook.com/v23.0/121858742548688/feed?access_token=EAATqf9cIolIBPfjyijN61M35ytEwtgHbUpVNckcKKY49wB6bQGpXqZAur1p4Mqb9T5mUxFnmbnRzSZCN3dImypdCfJ6cuUt3k9fDthoSynIMMk8MWUiV5hRC7LLA5ZByZBT2vVADtHLA5MCM3sRlrT336JBXz60IrS31rWIaS6j1rk2crDqYvCF9WZBjyrxtBChZAmw6Hw2RwtrceZBMcYZD";

    const statusEl = document.querySelector('.status');
    const feedEl = document.getElementById('feed');

    fetch(url)
      .then(response => {
        statusEl.textContent = `Status: ${response.status}`;
        return response.json();
      })
      .then(data => {
        if (!data.data || data.data.length === 0) {
          feedEl.innerHTML = "<p>No posts found.</p>";
          return;
        }

        data.data.forEach(post => {
          const card = document.createElement('div');
          card.className = 'card';

          const message = document.createElement('p');
          message.textContent = post.message || "(No text content)";
          card.appendChild(message);

          const date = document.createElement('div');
          date.className = 'date';
          date.textContent = post.created_time
            ? new Date(post.created_time).toLocaleString()
            : '';
          card.appendChild(date);

          const postIdContainer = document.createElement('div');
          postIdContainer.className = 'post-id-container';

          const postId = document.createElement('div');
          postId.className = 'post-id';
          postId.textContent = post.id;
          postIdContainer.appendChild(postId);

          const copyBtn = document.createElement('button');
          copyBtn.className = 'copy-btn';
          copyBtn.textContent = 'Copy';
          copyBtn.addEventListener('click', () => {
            navigator.clipboard.writeText(post.id).then(() => {
              copyBtn.textContent = 'Copied!';
              setTimeout(() => copyBtn.textContent = 'Copy', 1500);
            });
          });
          postIdContainer.appendChild(copyBtn);

          card.appendChild(postIdContainer);
          feedEl.appendChild(card);
        });
      })
      .catch(error => {
        statusEl.textContent = 'Error fetching feed';
        feedEl.innerHTML = `<p style="color:red;">${error}</p>`;
      });
  </script>
